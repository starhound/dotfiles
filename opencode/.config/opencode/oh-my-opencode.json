{
    "agents": {
        "Sisyphus": {
            "model": "anthropic/claude-opus-4-5",
            "prompt_append": "{file:./agent/sisyphus.md}",
            "delegate_agent": true,
            "parallel_execution": true,
            "description": "The Project Manager. Pure coordination only. Delegates ALL work."
        },
        "oracle": {
            "model": "anthropic/claude-sonnet-4-5",
            "prompt": "{file:./agent/deep-coder.md}",
            "description": "Deep logic specialist for complex reasoning, reviews, and high-risk changes."
        },
        "librarian": {
            "model": "google/antigravity-gemini-3-flash",
            "prompt": "{file:./agent/librarian.md}",
            "description": "Fast context gatherer for docs, patterns, and file references."
        },
        "explore": {
            "model": "anthropic/claude-haiku-4-5",
            "prompt": "{file:./agent/explore.md}",
            "description": "Rapid repository scout that surfaces hotspots and anomalies."
        },
        "document-writer": {
            "model": "google/antigravity-gemini-3-flash",
            "prompt": "{file:./agent/document-writer.md}",
            "description": "Technical writer for READMEs, changelogs, and stakeholder updates."
        }
    },
    "experimental": {
        "preemptive_compaction_threshold": 0.85,
        "truncate_all_tool_outputs": false,
        "aggressive_truncation": false,
        "auto_resume": true,
        "dcp_for_compaction": true
    }
}