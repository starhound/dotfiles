{
    "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
    "disabled_agents": [],
    "sisyphus_agent": {
        "disabled": false,
        "default_builder_enabled": false,
        "planner_enabled": true,
        "replace_plan": true
    },
    "background_task": {
        "modelConcurrency": {
            "anthropic/claude-opus-4-5": 1,
            "openai/gpt-5.2-codex": 2,
            "anthropic/claude-sonnet-4-5": 3,
            "anthropic/claude-haiku-4-5": 5,
            "google/gemini-2.5-flash": 4
        }
    },
    "agents": {
        "Sisyphus": {
            "model": "anthropic/claude-sonnet-4-5",
            "prompt": "{file:./agent/sisyphus.md}",
            "description": "Primary orchestrator. Coordinates all work, delegates to specialists.",
            "temperature": 0.3
        },
        "Sisyphus-Junior": {
            "model": "anthropic/claude-haiku-4-5",
            "prompt": "{file:./agent/sisyphus-junior.md}",
            "description": "Lightweight orchestrator for simple tasks.",
            "temperature": 0.2
        },
        "OpenCode-Builder": {
            "model": "anthropic/claude-sonnet-4-5",
            "prompt_append": "You are a fast, focused implementation agent. Write clean code, match existing patterns.",
            "description": "Fast implementation for straightforward coding tasks.",
            "temperature": 0.2
        },
        "Prometheus (Planner)": {
            "model": "openai/gpt-5.2-codex",
            "description": "Strategic planner for complex multi-step tasks.",
            "temperature": 0.2
        },
        "Metis (Plan Consultant)": {
            "model": "anthropic/claude-sonnet-4-5",
            "description": "Plan review and improvement specialist.",
            "temperature": 0.3
        },
        "Momus (Plan Reviewer)": {
            "model": "anthropic/claude-haiku-4-5",
            "description": "Critical reviewer for plans.",
            "temperature": 0.2
        },
        "oracle": {
            "model": "openai/gpt-5.2-codex",
            "prompt": "{file:./agent/oracle.md}",
            "description": "Deep reasoning expert. EXPENSIVE - architecture, debugging after failures.",
            "temperature": 0.2
        },
        "librarian": {
            "model": "anthropic/claude-haiku-4-5",
            "prompt": "{file:./agent/librarian.md}",
            "description": "Fast reference lookup - docs, patterns, external examples.",
            "temperature": 0.1
        },
        "explore": {
            "model": "anthropic/claude-haiku-4-5",
            "prompt": "{file:./agent/explore.md}",
            "description": "Rapid codebase scout. Fire liberally in parallel.",
            "temperature": 0.1
        },
        "multimodal-looker": {
            "model": "google/gemini-2.5-flash",
            "prompt": "{file:./agent/multimodal-looker.md}",
            "description": "Image/PDF analyzer for visual content interpretation.",
            "temperature": 0.2
        }
    },
    "categories": {
        "reasoning": {
            "model": "openai/gpt-5.2-codex",
            "fallback": ["anthropic/claude-opus-4-5", "google/antigravity-gemini-3-pro-high"],
            "description": "Deep thinking for complex problems"
        },
        "coding": {
            "model": "anthropic/claude-sonnet-4-5",
            "fallback": ["openai/gpt-5.1-codex-mini", "anthropic/claude-haiku-4-5"],
            "description": "Implementation workhorses"
        },
        "search": {
            "model": "anthropic/claude-haiku-4-5",
            "fallback": ["google/antigravity-gemini-3-flash", "opencode/grok-code"],
            "description": "Fast cheap parallel search"
        },
        "vision": {
            "model": "google/gemini-2.5-flash",
            "fallback": ["anthropic/claude-sonnet-4-5"],
            "description": "Multimodal image/PDF analysis"
        },
        "free": {
            "model": "opencode/grok-code",
            "fallback": [
                "nvidia/qwen/qwen3-coder-480b-a35b-instruct",
                "nvidia/deepseek-ai/deepseek-r1",
                "opencode/glm-4.7-free"
            ],
            "description": "Free models for bulk/low-priority tasks"
        }
    },
    "experimental": {
        "preemptive_compaction_threshold": 0.85,
        "truncate_all_tool_outputs": false,
        "aggressive_truncation": false,
        "auto_resume": true,
        "dcp_for_compaction": true
    }
}
